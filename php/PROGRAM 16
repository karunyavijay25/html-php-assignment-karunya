<?php
// Function to return the sum of two numbers
function calculateSum($a, $b) {
    return $a + $b;
}

// Initialize variables
$result = "";
$num1 = "";
$num2 = "";

// Check if form is submitted
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $num1 = $_POST["num1"];
    $num2 = $_POST["num2"];
    
    // Calculate the sum
    $result = calculateSum($num1, $num2);
}
?>

<!-- HTML Form and Output (all inside PHP file) -->
<!DOCTYPE html>
<html>
<head>
    <title>Sum of Two Numbers</title>
</head>
<body>
    <h2>Enter Two Numbers</h2>
    <form method="post" action="">
        Number 1: <input type="number" name="num1" value="<?php echo $num1; ?>" required><br><br>
        Number 2: <input type="number" name="num2" value="<?php echo $num2; ?>" required><br><br>
        <input type="submit" value="Calculate Sum">
    </form>

    <?php
    // Show result if form was submitted
    if ($result !== "") {
        echo "<h3>The sum of $num1 and $num2 is: $result</h3>";
    }
    ?>
</body>
</html>

output:
Enter Two Numbers
Number 1: 
34
Number 2: 
56

The sum of 34 and 56 is: 90
